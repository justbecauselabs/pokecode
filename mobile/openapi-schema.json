        "tags": ["Commands"],
        "description": "Discover slash commands from both user Claude home directory and project directory",
        "parameters": [
          {
            "schema": {
              "default": "all",
              "anyOf": [
                { "type": "string", "enum": ["user"] },
                { "type": "string", "enum": ["project"] },
                { "type": "string", "enum": ["all"] }
              ]
            },
            "in": "query",
            "name": "type",
            "required": false,
            "description": "Filter commands by type"
          },
          {
            "schema": { "type": "string" },
            "in": "query",
            "name": "search",
            "required": false,
