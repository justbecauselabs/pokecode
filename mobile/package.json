{
  "name": "@pokecode/mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "bunx expo start",
    "android": "bunx expo start --android",
    "ios": "bunx expo start --ios",
    "web": "bunx expo start --web",
    "test": "bun test",
    "lint": "bunx biome lint . && bunx eslint . --ext .tsx,.ts",
    "lint:fix": "bunx biome lint --write . && bunx eslint . --ext .tsx,.ts --fix",
    "lint:rn": "bunx eslint . --ext .tsx,.ts",
    "lint:rn:fix": "bunx eslint . --ext .tsx,.ts --fix",
    "lint:rn:custom": "bun scripts/custom-react-native-linter.js",
    "format": "bunx biome format .",
    "format:fix": "bunx biome format --write .",
    "check": "bunx biome check . && bunx eslint . --ext .tsx,.ts",
    "check:fix": "bunx biome check --write . && bunx eslint . --ext .tsx,.ts --fix",
    "typecheck": "bunx tsc --noEmit",
    "prebuild": "bunx expo prebuild",
    "eas:build:preview": "bunx eas build --profile preview",
    "eas:build:production": "bunx eas build --profile production"
  },
  "dependencies": {
