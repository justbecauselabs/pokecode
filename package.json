{
  "name": "pokecode",
  "private": true,
  "workspaces": [
    "packages/*",
    "mobile"
  ],
  "scripts": {
    "build": "bun run build:api && bun run build:core && bun run build:server && bun run build:cli",
    "build:api": "cd packages/api && bun run build",
    "build:core": "cd packages/core && bun run build",
    "build:server": "cd packages/server && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "dev": "bun run dev:server",
    "dev:server": "cd packages/cli && bun run src/cli.ts serve --log-level debug",
    "dev:cli": "cd packages/cli && bun run src/cli.ts",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check . --write",
    "format": "bunx @biomejs/biome format . --write",
    "typecheck": "bun run typecheck:api && bun run typecheck:core && bun run typecheck:server && bun run typecheck:cli && bun run typecheck:mobile",
    "typecheck:api": "cd packages/api && bun run typecheck",
    "typecheck:core": "cd packages/core && bun run typecheck",
    "typecheck:server": "cd packages/server && bun run typecheck",
    "typecheck:cli": "cd packages/cli && bun run typecheck",
    "typecheck:mobile": "cd mobile && bun run typecheck",
    "test": "bun run test:api && bun run test:core && bun run test:server && bun run test:cli && bun run test:mobile",
    "test:api": "cd packages/api && bun run test",
    "test:core": "cd packages/core && NODE_ENV=test bun test",
    "test:server": "cd packages/server && bun run test",
    "test:cli": "cd packages/cli && bun run test",
    "test:mobile": "cd mobile && bun run test",
    "cli:compile": "cd packages/cli && bun build --compile src/cli.js --outfile ../../dist/pokecode",
    "deps:check": "syncpack lint",
    "deps:fix": "syncpack fix-mismatches && syncpack format",
    "deps:update": "syncpack update"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/yaml": "^1.9.7",
    "syncpack": "^13.0.4",
    "typescript": "^5.0.0",
    "zod": "^4.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
