{
  "name": "@claude-code-mobile/backend",
  "version": "1.0.0",
  "description": "Claude Code Mobile Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev:server": "bun --watch src/server.ts",
    "dev:worker": "bun --watch src/workers/index.ts",
    "build": "bun build src/server.ts --target=bun --outdir=dist && bun build src/workers/index.ts --target=bun --outdir=dist/workers",
    "start:server": "bun run dist/server.js",
    "start:worker": "bun run dist/workers/index.js",
    "worker": "bun src/workers/index.ts",
    "migrate:from-postgres": "bun src/scripts/migrate-to-sqlite.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "bun run scripts/e2e-test.ts",
    "test:e2e:local": "API_URL=http://localhost:3000 bun run scripts/e2e-test.ts",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "type-check": "bunx tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:check": "bunx drizzle-kit check",
    "db:drop": "bunx drizzle-kit drop",
    "seed": "bun run scripts/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.72",
    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@sinclair/typebox": "^0.32.31",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.30.10",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.21.2",
    "jsdom": "^26.1.0",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
