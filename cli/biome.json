{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.tsx"],
    "ignoreUnknown": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "all": true,
        "noBannedTypes": "error",
        "noUselessConstructor": "error",
        "noForEach": "off"
      },
      "correctness": {
        "all": true,
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "error"
      },
      "style": {
        "all": true,
        "noCommonJs": "error",
        "noNonNullAssertion": "error",
        "useConst": "error",
        "useBlockStatements": "error",
        "noParameterAssign": "error",
        "noDefaultExport": "off",
        "noParameterProperties": "off",
        "useNodejsImportProtocol": "error"
      },
      "suspicious": {
        "all": true,
        "noExplicitAny": "error", // CRITICAL: NO ANYS ALLOWED
        "noImplicitAnyLet": "error",
        "noDoubleEquals": "error",
        "noDebugger": "error",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["error", "warn", "info", "log"]
          }
        }
      },
      "nursery": {
        "all": true,
        "noEvolvingTypes": "error",
        "useImportExtensions": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  }
}