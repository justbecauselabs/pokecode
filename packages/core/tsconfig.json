{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
