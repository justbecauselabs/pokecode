{
  "name": "@pokecode/types",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun build src/index.ts --outdir dist --target bun --format esm --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": { "bun": ">=1.0.0" }
}
