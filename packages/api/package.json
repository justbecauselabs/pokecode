{
  "name": "@pokecode/api",
  "version": "0.1.0",
  "description": "Shared API schemas and types for PokÃ©Code backend and mobile",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas/*": {
      "types": "./dist/schemas/*.d.ts",
      "default": "./dist/schemas/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun build src/index.ts --outdir dist --target bun --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check .",
    "test": "bun test"
  },
  "dependencies": {
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "zod": "^4.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
